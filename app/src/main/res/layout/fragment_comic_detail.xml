<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shortcut.ui.detail.ComicDetailFragment">

    <LinearLayout
        android:id="@+id/ll_board"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAnnouncementDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:padding="16dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvAnnouncementDetailBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAnnouncementDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:layout_gravity="end" />

        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_height="1dp"
            android:background="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


